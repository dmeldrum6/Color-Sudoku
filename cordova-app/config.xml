<?xml version='1.0' encoding='utf-8'?>
<widget id="com.colorsudoku.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Color Sudoku</name>
    <description>A fun and colorful Sudoku puzzle game with multiple variants including colors, numbers, letters, and emojis.</description>
    <author email="dev@example.com" href="https://github.com">
        Color Sudoku Team
    </author>
    <content src="index.html" />

    <!-- Platform-specific preferences -->
    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="33" />
        <preference name="Orientation" value="portrait" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#3b82f6" />
        <preference name="StatusBarStyle" value="lightcontent" />
    </platform>

    <!-- General preferences -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="0xFFFFFFFF" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="Fullscreen" value="false" />

    <!-- Allow intents -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <!-- Access to external resources -->
    <access origin="*" />
</widget>
